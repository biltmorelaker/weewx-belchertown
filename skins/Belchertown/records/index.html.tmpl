            // Removed the year with ", YYYY, or "/YYYY" or ".YYYY" or "-YYYY"
            var start_day_epoch = $at_days_with_rain[1] - ($at_days_with_rain[0] * 86400);
            jQuery("#at-days-with-rainfall-range-ts").text( moment.unix(start_day_epoch).format('LL').replace(/([A-Z])|[, \/\-\.]+\b[0-9]{4}\b/g, '$1') + " - " + moment.unix($at_days_with_rain[1]).format('LL') );

